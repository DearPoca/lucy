<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>webrtc live</title>
    <script src="/assets/js/third_party/webrtc.min.js"></script>
    <style>
        body,center{
            padding:0;
            margin:0;
        }
        .v-container{
            width:1280px;
            height:720px;
            border:solid 1px red;
        }
        video{
            width:100%;
            height:100%;
        }
    </style>
</head>
<body>
<video id="webrtc_player" controls></video>
</body>
<script type="text/javascript">
    var video = document.getElementById('webrtc_player');
    var url = {{ .webrtc_url }}
    var option = {
        video: video,
        autoplay: true
    }
    var player = new JSWebrtc.Player(url, option);
</script>
</html>