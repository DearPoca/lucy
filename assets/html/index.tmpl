<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <title>live rooms</title>
    <div id="username" data-value={{ .username }}></div>
    <script src="/assets/js/common_links.js"></script>
    <link rel="stylesheet" href="/assets/css/table.css">
</head>
<body>
    <table id="rooms-list">
        <thead>
        </thead>
        <tbody>
        </tbody>
    </table>
</body>
<script>
    function createTd(father, text) {
        let td = document.createElement("td");
        father.appendChild(td);
        td.innerHTML = text;
    }

    function createLink(father, url) {
        let td = document.createElement("td");
        father.appendChild(td);
        let a = document.createElement("a");
        td.appendChild(a)
        a.href = url
        a.textContent = "Link"
    }

    let xhr = new XMLHttpRequest();
    xhr.onreadystatechange = function () {
        if (xhr.readyState === 4 && xhr.status === 200) {
            const resJson = JSON.parse(xhr.response)
            console.log(resJson)
            if (resJson["code"] == 200) {
                let table = document.getElementById("rooms-list");
                if (resJson["data"].length > 0) {
                    let tr = document.createElement("tr");
                    table.children[0].appendChild(tr);
                    Object.entries(resJson["data"][0]).forEach(([key, value]) => {
                        createTd(tr, key)
                    });
                }
                for (let i = 0; i < resJson["data"].length; i++) {
                    let room = resJson["data"][i]
                    let tr = document.createElement("tr");
                    table.children[1].appendChild(tr);
                    Object.entries(resJson["data"][i]).forEach(([key, value]) => {
                        if (key.indexOf("link") !== -1) {
                            createLink(tr, value);
                        }else{
                            createTd(tr, value);
                        }
                    });
                }
            } else {
                window.alert("get rooms failed");
            }
        }
    }
    let url = `/api/v1/get_rooms`
    xhr.open("get", url)
    xhr.send();
</script>
</html>

